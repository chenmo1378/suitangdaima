<Window x:Class="HRMSys.UI.SystemMgr.OperatorEditiUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="管理员编辑添加" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="23,8,0,0" Name="textBlock1" Text="用户名" VerticalAlignment="Top" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="20,54,0,0" Name="textBlock2" Text="姓名" VerticalAlignment="Top" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="23,104,0,0" Name="textBlock3" Text="初始密码" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="99,7,0,0" Name="txtUserName" VerticalAlignment="Top" Width="121" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="99,53,0,0" Name="txtRealName" VerticalAlignment="Top" Width="120" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="99,101,0,0" Name="pwdPassword" VerticalAlignment="Top" Width="120" />
        <Button Content="保存" Height="23" HorizontalAlignment="Left" Margin="49,156,0,0" Name="btnOK" VerticalAlignment="Top" Width="75" Click="btnOK_Click" />
        <Button Content="取消" Height="23" HorizontalAlignment="Right" Margin="0,156,50,0" Name="btnCancel" VerticalAlignment="Top" Width="75" Click="btnCancel_Click" />
    </Grid>
</Window>
